<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Detail"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Apotek:"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/tv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kimia Farma"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/tv4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jenis Pesanan:"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/tv5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paket Obat"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/tv6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status Penjemputan:"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/tvJemput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sedang Dijemput"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/btnCheckJemput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lokasi Penjemputan"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:id="@+id/edJemput"
            android:hint="nama pengirim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"/>

        <CheckBox
            android:id="@+id/cbJemput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="menyatakan pesanan sudah dijemput"/>

        <Button
            android:id="@+id/btnJemput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selesai dijemput"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:enabled="false"/>

        <TextView
            android:id="@+id/tv8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status Pengantaran:"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/tvAntar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Belum Diantar"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/btnCheckAntar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lokasi Pengantaran"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:enabled="false"/>

        <EditText
            android:id="@+id/edAntar"
            android:hint="nama penerima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:enabled="false"/>

        <CheckBox
            android:id="@+id/cbAntar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="menyatakan pesanan sudah diterima"
            android:enabled="false"/>

        <Button
            android:id="@+id/btnAntar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selesai diantar"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:enabled="false"/>

    </LinearLayout>
</ScrollView>